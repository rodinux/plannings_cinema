<p id="notice"><%= notice %></p>

<h1>Seances</h1>

<table>
  <thead>
    <tr>
      <th>Projection</th>
      <th>Caisse</th>
      <th>Horaire</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seances.each do |seance| %>
      <tr>
        <td><%= seance.projection %></td>
        <td><%= seance.caisse %></td>
        <td><%= seance.horaire %></td>
        <td><%= link_to 'Show', seance %></td>
        <td><%= link_to 'Edit', edit_seance_path(seance) %></td>
        <td><%= link_to 'Destroy', seance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

