<div class="container">
  <center>
  <h1>Choissez un nouveau mot de passe</h1>

    <%= form_for @user, url: reset_password_path(@token), method: :patch do |f| %>


      <div class="form-group">
        <%= f.label :password, 'Votre nouveau mot de passe' %>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirmation de votre nouveau mot de passe' %>
        <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
      </div>

        <%= f.submit 'Valider le mot de passe', class: 'btn btn-primary btn-lg' %>
    <% end %>
</center>
</div>