
<center><h1>Indisponibilités</h1></center>

<div class="container">
<div class="actions">
<%= link_to 'Céer une Nouvelle Indisponibilité', new_disponibilite_path, :class => "btn btn-warning" %>
</div>
 <div class="table table-responsive table-hover table-striped">
  <div class="table-row">
    <div class="col-md-12">
        <%= month_calendar events: @disponibilites do |date, disponibilites| %>
        <%= l date, format: :short %>
        <% disponibilites.each do |disponibilite| %>
          <div>
            <p>
            <%= link_to "#{disponibilite.nom}", edit_disponibilite_path(disponibilite), :title => "Modifier" %></p>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<center><h2>Liste détaillée des absences</h2></center>
<table class="table table-responsive table-hover table-striped">
  <thead>
    <tr>
      <th>Prénom</th>
      <th>Du:</th>
      <th>Au:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @disponibilites.order(start_time: :asc).each do |disponibilite| %>
      <tr>
        <td><%= disponibilite.nom %></td>
        <td><%= l disponibilite.start_time, format: :middle_long %></td>
        <td><%= l disponibilite.end_time, format: :middle_long %></td>
        <td><%= link_to 'Voir', disponibilite, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Modifier', edit_disponibilite_path(disponibilite), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Suprimer', disponibilite, method: :delete, data: { confirm: 'En êtes-vous sûr ?' }, :class => "btn btn-danger" %>
    <% end %>
  </tbody>
</table>

