<center>
<div class="container">
	<div class="description">
	  <strong>Film:</strong>
	  <%= raw @film.titrefilm %>
	  <%=simple_format h @film.description %>
	  <% if @film.classifications.present? %>
	    <%= @film.classifications.map(&:nom_classification).sort.join(", ") %>
	  <% end %>
	</div>
<br>
</center>
	<div class="btn-group">
    <button type="button" class="btn btn-danger">Actions</button>
        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Modifier', edit_film_path(@film), :class => "btn btn-warning active" %></li>
            <li><%= link_to 'Créer une nouvelle seance', new_seance_path, :class => "btn btn-primary active" %></li>
            <li class="divider"></li>
            <li><%= link_to 'Retour à la liste des Films', films_a_venir_path, :class => "btn btn-success active" %></li>
        </ul>
    </div>
</div>
<br>