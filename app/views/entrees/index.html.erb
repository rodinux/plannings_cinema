<div class="container">
<div class="actions">
  <%= link_to 'Créer une nouvelle Entrée', new_entree_path, :class => "btn btn-primary btn-lg" %>
</div>
<table>
  <thead>
    <tr>
      <th>Billet</th>
      <th>Nombre</th>
      <th>Seance</th>
      <th>Projection - Caisse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entrees.order(created_at: :desc).each do |entree| %>
      <tr>
        <td><%= entree.billet %></td>
        <td><%= entree.nombre %></td>
        <td><span class='glyphicon glyphicon-film'></span> <%= entree.seance.film.titrefilm %><br>
        <span class='glyphicon glyphicon-time'></span> <%= l entree.seance.horaire, format: :very_long %></td>
        <td><span class='glyphicon glyphicon-facetime-video'></span> <%= entree.seance.projection %>  - <span class='glyphicon glyphicon-briefcase'></span> <%= entree.seance.caisse %></td>
        <td><%= link_to 'Show', entree %></td>
        <td><%= link_to 'Edit', edit_entree_path(entree) %></td>
        <td><%= link_to 'Destroy', entree, method: :delete, data: { confirm: 'Êtes_vous sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Liste des Seances </h1>
<table>
  <thead>
    <tr>
      <th>Séances</th>
      <th>Billet</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @seances = Seance.all %>
    <% @seances.each do |seance| %>
    <% seance.entrees.each do |entree_seance| %>
      <tr>
        <td><span class='glyphicon glyphicon-film'></span> <%= seance.film.titrefilm %><br>
        <span class='glyphicon glyphicon-time'></span> <%= l seance.horaire, format: :very_long %></td>
        <td><%= entree_seance.billet %></td>
        <td><%= entree_seance.nombre %></td>

        <td><%= link_to 'Voir', seance %></td>
        <td><%= link_to 'Éditer', edit_seance_path(seance) %></td>
        <td><%= link_to 'Supprimer', seance, method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
<br>


