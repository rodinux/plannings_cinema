<%= form_for(entree) do |f| %>
  <% if entree.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entree.errors.count, "error") %> prohibited this entree from being saved:</h2>

      <ul>
      <% entree.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
          <%= f.label :seance_id, :value => 'Seance' %><br>
          <%= f.select :seance_id, Seance.all.order(horaire: :desc).collect {|seance| [seance.film.titrefilm.to_s + " " + seance.village.commune + " " + (l seance.horaire, format: :very_long).to_s, seance.id ] } %>
  </div>

  <div class="field">
   <% billets = ["Adultes", "Enfants", "Scolaires"] %>
        <span class="glyphicon glyphicon-info-sign"></span> <%= f.label :billet, :value => 'Billets' %><br>
        <%= f.select :billet, billets %>
  </div>

  <div class="field">
    <%= f.label :nombre, in: 0..500, step: 0 %>
    <%= f.number_field :nombre, in: 0..500, step: 0 %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
